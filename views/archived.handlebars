  <script>
      function empty()
        {
          var x;
          x = document.getElementById("search").value;
          if (x != "") 
           { 
              document.myForm.submit();
           }
        }
      function myFunction(id)
      {
         var x = document.getElementById(id+"+1").value;
         document.getElementById(id).style.backgroundColor = x;
        
      }
      
  

  </script>
