</ul>
    
      <form  name="myForm" action="/uploadnote" method="POST">
        {{#each data}}
              {{#unless archived_status }}                    
                    <div class="flex-container">
                        <br><div><p id="{{this.id}}">{{this.note}}</p></div><br>
                        
                        <input type="color" id="{{this.id}}+1" value="#ff0080" onchange="myFunction({{this.id}})" >
                        <div>
                          <a href="/delete?id={{this.id}}"><input type="button"  name="unpined" class="button button1" value="Delete"></a>
                          <a href="/archive?id={{this.id}}&archive={{this.archived_status}}"><input type="button"  name="archive" class="button button1" value="Restore"></a>                                                  
                        </div>
                    </div>
                   
                {{/unless}}      
         {{/each}}     
