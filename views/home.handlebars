<html>
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="author" content="colorlib.com">
    <link href="https://fonts.googleapis.com/css?family=Poppins" rel="stylesheet" />
    <link href="css/main1.css" rel="stylesheet" />
    
  </head>
  <style>

.heading{
margin-bottom: 4000px;
padding: 0px;
} 

ul {
  list-style-type: none;
  margin: 0;
  padding: 0;
  width: 200px;
  background-color: #f1f1f1;
}

li a {
  display: block;
  color: #000;
  padding: 8px 16px;
  text-decoration: none;
}

li a.active {
  background-color: #4CAF50;
  color: white;
}

li a:hover:not(.active) {
  background-color: #555;
  color: white;
}
</style>
  <script>
      function empty()
        {
          var x;
          x = document.getElementById("search").value;
          if (x != "") 
           { 
              document.myForm.submit();
           }
        }
      function myFunction(id)
      {
         var x = document.getElementById(id+"+1").value;
         document.getElementById(id).style.backgroundColor = x;
        
      }
      
  

  </script>
  <body>
    
  <div class="s003">
      <div class="heading">
    <ul>
      <li><a class="active" href="home">Notes</a></li>
      <li><a href="addlabel">Add Lables</a></li>
      <li><a href="/archived">Archived</a></li>
    </ul>
    </div>
      <form  name="myForm" action="/uploadnote" method="POST">
        <div class="inner-form">
          <div class="input-field second-wrap">
            <input id="search" type="text" name="note"  placeholder="Enter Notes" onblur="empty()" />
          </div>
        </div>
        {{#each data}}
              {{#if archived_status }}
                 {{#if pin_status }}
                     
                    <div class="flex-container">
                        <br><div><p id="{{this.id}}">{{this.note}}</p></div><br>
                        
                        <input type="color" id="{{this.id}}+1" value="#ff0080" onchange="myFunction({{this.id}})" >
                        <div>
                          <a href="/update?id={{this.id}}&pin_status={{this.pin_status}}"><input type="button"  name="unpined" class="button button1" value="Unpined"></a>
                          <a href="/archive?id={{this.id}}&archive_status={{this.archived_status}}"><input type="button"  name="archive" class="button button1" value="archived"></a>                                                  
                        </div>
                    </div>
                {{else}}  
                    <div class="flex-container" >
                        <br><div><p id="{{this.id}}">{{this.note}}</p></div><br>
                        
                        <input type="color" id="{{this.id}}+1" value="#ff0080" onchange="myFunction({{this.id}})">
                        <div>
                        <a href="/update?id={{this.id}}&pin_status={{this.pin_status}}"><input type="button" name="pined" class="button button1" value="Pined"></a>
                        
                              <a href="/archive?id={{this.id}}&archive_status={{this.archived_status}}"><input type="button"  name="archive" class="button button1" value="archived"></a>
                        
                        </div>
                    </div>
                {{/if}} 
                {{/if}}      
         {{/each}}     
      </form>
        
    </div>

    <script src="handlebars-v4.0.5.js"></script>
    <script src="js/extention/choices.js"></script>
    <script>
      const choices = new Choices('[data-trigger]',
      {
        searchEnabled: false,
        itemSelectText: '',
      });

    </script>
